extends ../layout

block content
    h1.
        Add Payment for LC : #{LC.LC_no}
    form#formAddPayment(name="addPayment",method="post",action="/LCs/#{LC._id}/addPayment",enctype='application/x-www-form-urlencoded')
        p Payment:
            input#inputIFSC(type="number", name="payment")
        p
            input(type="hidden", value="PUT", name="_method")
        p
            button#btnSubmit(type="submit") submit