extends ../layout

block content
    h1.
        Supplier ID #{supplier._id}
    form(action='/suppliers/#{supplier._id}/edit',method='post',name='updatesupplier',enctype='application/x-www-form-urlencoded')
        p Name: 
            input#inputName(type="text", value='#{supplier.name}', name="name")
        p City:
            input#inputLocation(type="text", value='#{supplier.city}', name="city")
        - each bank, i in supplier.banks
            p Bank '#{i}':
              input#inputBank(type="text", name="bank", value='#{bank.name}')
            p Branch:
              input#inputBranch(type="text", name="branch", value='#{bank.branch}')
            p IFSC:
              input#inputIFSC(type="text", name="IFSC", value='#{bank.IFSC}')            
        p     
            button#btnSubmit(type="submit") submit
        p 
            input(type='hidden',value='PUT',name='_method')
        p 
            button#btnSubmit(type='submit').
                Update